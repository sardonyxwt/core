{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "useRootDirs": true
            },
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src", "types"
    ]
}
